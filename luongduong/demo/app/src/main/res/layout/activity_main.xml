<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"

        android:contentDescription="@string/todo">

    </ImageView>
    <Switch
        android:id="@+id/switchWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:padding="10dp"
        android:background="#3498db"
        android:backgroundTint="#2980b9"
        android:text="@string/wifi"
        android:textColor="#ecf0f1"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViewNoiDung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:layout_marginTop="80dp"
        android:text="@string/i_u_khi_n"
        android:textColor="#ecf0f1"
        android:textSize="48sp" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/textViewNoiDung"
        app:layout_constraintBottom_toBottomOf="@+id/buttonTrangthai"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:background="#8e44ad"
        android:padding="10dp"
        android:text="@string/h_n_gi_t_i_c_y"
        android:textColor="#ecf0f1" />

    <Button
        android:id="@+id/buttonTrangthai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#8e44ad"
        android:padding="10dp"
        android:text="@string/t_nh_tr_ng_c_a_c_y"
        android:textColor="#ecf0f1" />


